@model IEnumerable<MiniMercado.Models.Producto>

@{
    ViewData["Title"] = "Gestión de Stock";
    Layout = "~/Views/Shared/_StockScreenLayout.cshtml";
}

<div class="container mt-5">
    <div class="container-chad">
        <div class="table-container" style="max-height:50rem; overflow-y: auto;">
        <div class="titulo-tabla">
            <a class="btn btn-sm btn-warning" id="precio-manual">Precio Manual</a>
            <div class="input-group mb-4">
                <input type="text" id="busquedaProductos" class="form-control rounded-pill text-center" placeholder="Toque para buscar productos...">
            </div>
            <a class="btn btn-sm btn-warning" id="agregar-producto">Agregar Producto</a>
        </div>

            <div class="tabla-wrapper">
                <table class="table table-striped table-hover table-bordered" id="productTable">

                    <thead class="table-white">
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Stock</th>
                            <th>Precio Unitario</th>
                            <th>Proveedor</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="fila-producto">
                            <td>@Html.DisplayFor(modelItem => item.IdProducto)</td>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                            <td>@Html.DisplayFor(modelItem => item.PrecioUnitario)</td>
                            <td>@item.ProveedorNavigation?.Nombre</td>
                            <td class="acciones">
                                <a class="btn btn-sm btn-warning" asp-route-id="@item.IdProducto">Editar</a>
                                <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.IdProducto">Detalles</a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.IdProducto">Eliminar</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Modal para mostrar las acciones -->
<div id="actionContainer" >
    <div class="actionContainer-header">
        <h5 class="actionContainer-title">Título del Modal</h5>
        <button type="button" class="close-actionContainer" >&times;</button>
    </div>
    <div class="actionContainer-body">
        <!-- Aquí se cargará el contenido dinámico -->
    </div>
</div>

<!-- Fondo oscuro para el modal -->
<div id="actionContainerBackdrop"></div>


